@model ControlDeTareasWeb.Negocio.Unidad

@{
    ViewBag.Title = "CreateUnidad";
    Layout = "~/Views/Shared/_EmpresaLayout.cshtml";
}

<h2>CreateUnidad</h2>

@using (Html.BeginForm())
{

    @Html.LabelFor(p => p.nombre_unidad)
    @Html.TextBoxFor(p => p.nombre_unidad)
    <br />
    @Html.LabelFor(p => p.proceso)
    @Html.DropDownListFor(p => p.proceso, new SelectList(ViewBag.procesos, "id_proceso", "nombre_proceso"))
    <br />
    @Html.LabelFor(p => p.estado)
    @Html.DropDownListFor(p => p.estado, new SelectList(ViewBag.estado,"id_estado","nombre_estado"))
    <br />
    @Html.LabelFor(p => p.fecha_inicio)
    @Html.TextBoxFor(p => p.fecha_inicio)
    <br />
    @Html.LabelFor(p => p.fecha_termino)
    @Html.TextBoxFor(p => p.fecha_termino)
    <br />

    <button>Guardar</button>
}
@TempData["mensaje"]