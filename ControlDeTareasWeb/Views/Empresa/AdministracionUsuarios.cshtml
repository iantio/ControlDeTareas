@using ControlDeTareasWeb.Negocio

@{
    ViewBag.Title = "AdministracionUsuarios";
    Layout = "~/Views/Shared/_EmpresaLayout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Control de Tareas WEB</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/EstiloControlTareas.css" />
</head>


<body>
    <div class="container">
        <div class="row">
            <div class="col rounded m-2 p-2 text-white d-none d-sm-block">
                <label class="align-content-center text-light m-2 p-2">Administracion de Usuarios</label>
                <a class="btn btn-outline-light btn-sm m-2 p-2 text-nowrap float-end" href="/Empresa/" role="button">Menu</a>
            </div>
        </div>

        @using (Html.BeginForm("AdministracionUsuarios", "Empresa", FormMethod.Post))
        {
            <div class="row">
                <div class="col bg-light rounded m-2 p-2 d-none d-sm-block">
                    <form class="row w-100" role="search">
                        <div class="col-auto">
                            @Html.TextBox("buscar", "", new { @class = "form-control" })
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        }

        <div class="row d-none d-sm-block">

            @{ List<Empleado> empleados = (List<Empleado>)ViewBag.empleados; }

            <table class="table table-striped bg-light rounded">
                <thead>
                    <tr>
                        <th scope="col">RUT</th>
                        <th scope="col">Empresa</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Fecha Ingreso</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Clave</th>
                        <th scope="col">¿Eliminar?</th>
                        <th scope="col">¿Editar?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empleado in empleados)
                    {
                        <tr>
                            <td>@empleado.id_rut</td>
                            <td>@empleado.empresa.nombre_empresa</td>
                            <td>@empleado.rol.nombre_rol</td>
                            <td>@empleado.fecha_ingreso</td>
                            <td>@empleado.nombre_emp</td>
                            <td>@empleado.usuario</td>
                            <td>@empleado.clave</td>
                            <td>@Html.ActionLink("Eliminar", "DeleteEmpleado", new { id = empleado.id_rut }, new { @class = "btn btn-danger w-100" })</td>
                            <td>@Html.ActionLink("Editar", "EditarEmpleado", new { id = empleado.id_rut }, new { @class = "btn btn-info w-100" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- COMENTARIO PARA QUE PONGA PANTALLA EN MODO PORTADA PARA VER DE MANERA CORRECTA LA TABLA-->
        <div class="bg-danger rounded d-sm-none m-2 p-2 text-light">¡Este dispositivo es muy pequeño para ver de manera correcta los elementos! Ponga el dispositivo de manera horizontal para ver los elementos de manera correcta y poder interactuar con ellos.</div>
        <a class="btn btn-outline-success btn-sm m-1 text-nowrap w-100 d-sm-none" href="/Empresa/" role="button">Volver al menu!</a>

        <div class="row bg-light rounded d-none d-sm-block">
            <div class="col m-2 p-2 text-white text-nowrap rounded">
                <a type="button" class="btn btn-success" href="/Empresa/CreateEmpleado">Crear Usuario</a>
                <label>@TempData["mensaje"]</label>


            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>