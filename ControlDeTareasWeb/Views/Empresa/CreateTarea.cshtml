@model ControlDeTareasWeb.Negocio.Tarea

@{
    ViewBag.Title = "Crear Tarea";
    Layout = "~/Views/Shared/_EmpresaLayout.cshtml";
}
<h2>Crear Tarea</h2>

@using (Html.BeginForm())
{
    <div class="container m-2">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col bg-light rounded">
                <form>
                    <div class="form-group m-1">
                        @Html.HiddenFor(p => p.id_tarea)
                        @Html.HiddenFor(p => p.id_empresa_tarea)
                        <label>Unidad</label>
                        @Html.DropDownListFor(p => p.id_unidad_tarea, new SelectList(ViewBag.unidad, "id_unidad", "nombre_unidad"), new { @class = "form-control m-1" })
                    </div>
                    <div class="form-group m-1">
                        <label>Estado</label>
                        @Html.DropDownListFor(p => p.id_estado_tarea, new SelectList(ViewBag.estado, "id_estado", "nombre_estado"), new { @class = "form-control m-1" })
                    </div>
                    <div class="form-group m-1">
                        @Html.LabelFor(p => p.nombre_tarea, "Nombre Proceso")
                        @Html.TextBoxFor(p => p.nombre_tarea, new { @class = "form-control m-1", required = "required" })
                    </div>
                    <div class="form-group m-1">
                        @Html.LabelFor(p => p.fecha_inicio, "Fecha Inicio")
                        @Html.TextBoxFor(p => p.fecha_inicio, new { @class = "form-control m-1", required = "required" })
                    </div>
                    <div class="form-group m-1">
                        @Html.LabelFor(p => p.fecha_termino, "Fecha Termino")
                        @Html.TextBoxFor(p => p.fecha_termino, new { @class = "form-control m-1", required = "required" })
                    </div>
                    <button class="btn btn-primary m-2 w-100">Guardar</button>
                </form>
            </div>
            <div class="col-2">
            </div>
        </div>
    </div>
}
