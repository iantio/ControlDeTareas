@using ControlDeTareasWeb.Negocio;

@{
    ViewBag.Title = "AdministracionUnidades";
    Layout = "~/Views/Shared/_EmpresaLayout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Control de Tareas WEB</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/EstiloControlTareas.css" />
</head>
@{ List<Unidad> unidades = (List<Unidad>)ViewBag.unidad; }
<body>
    <div class="container">
        <div class="row">
            <div class="col rounded m-2 p-2 text-white d-none d-sm-block">
                <label class="align-content-center text-light m-2 p-2">Administracion de Unidades</label>
                <a class="btn btn-outline-light btn-sm m-2 p-2 text-nowrap float-end" href="/Empresa/" role="button">Menu</a>
            </div>
        </div>
        @using (Html.BeginForm("AdministracionUnidades", "Empresa", FormMethod.Post))
        {
            <div class="row">
                <div class="col bg-light rounded m-2 p-2 d-none d-sm-block">
                    <form class="row w-100" role="search">
                        <div class="col-auto">
                            @Html.TextBox("buscar", "", new { @class = "form-control" })
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        <div class="row d-none d-sm-block">


            <table class="table table-striped bg-light rounded">
                <thead>
                    <tr>
                        <th scope="col">ID Unidad</th>
                        <th scope="col">Nombre Unidad</th>
                        <th scope="col">Proceso Unidad</th>
                        <th scope="col">Estado Unidad</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Termino</th>
                        <th scope="col">¿Eliminar?</th>
                        <th scope="col">¿Editar?</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var unidad in unidades)
                    {
                        <tr>
                            <td>@unidad.id_unidad</td>
                            <td>@unidad.nombre_unidad</td>
                            <td>@unidad.proceso.nombre_proceso</td>
                            <td>@unidad.estado.nombre_estado</td>
                            <td>@unidad.fecha_inicio</td>
                            <td>@unidad.fecha_termino</td>
                            <td>@Html.ActionLink("Eliminar", "DeleteUnidad", new { id = unidad.id_unidad }, new { @class = "btn btn-danger w-100" })</td>
                            <td>@Html.ActionLink("Editar", "EditarUnidad", new { id = unidad.id_unidad }, new { @class = "btn btn-info w-100" })</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- COMENTARIO PARA QUE PONGA PANTALLA EN MODO PORTADA PARA VER DE MANERA CORRECTA LA TABLA-->
        <div class="bg-danger rounded d-sm-none m-2 p-2 text-light">¡Este dispositivo es muy pequeño para ver de manera correcta los elementos! Ponga el dispositivo de manera horizontal para ver los elementos de manera correcta y poder interactuar con ellos.</div>
        <a class="btn btn-outline-success btn-sm m-1 text-nowrap w-100 d-sm-none" href="/Empresa/" role="button">Volver al menu!</a>

        <div class="row bg-light rounded d-none d-sm-block">
            <div class="col m-2 p-2 text-white text-nowrap rounded">
                <a type="button" class="btn btn-success" href="/Empresa/CreateUnidad">Crear Unidad</a>
                <label>@TempData["mensaje"]</label>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

