
@{
    ViewBag.Title = "OlvContrasena";
}

<div class="container m-2">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col bg-light rounded">
            <form>
                <div class="form-group m-1">
                    <label for="txtEmpresa">Empresa</label>
                    <input type="text" class="form-control m-1" id="txtEmpresa" aria-describedby="empresaHelp" placeholder="Ingresa tu Empresa...">
                </div>
                <div class="form-group m-1">
                    <label for="txtCorreo">Correo</label>
                    <input type="email" class="form-control m-1" id="txtCorreo" aria-describedby="emailHelp" placeholder="Ingresa tu Correo...">

                    <small id="emailHelp" class="form-text text-muted m-1">Nunca compartiremos tu correo con nadie mas.</small>
                </div>
                <div class="row form-group m-1">
                    <div class="col">
                        <button type="submit" class="btn btn-primary m-1 w-100">Recuperar Contraseña</button>
                        
                    </div>
                    <small id="emailHelp" class="form-text text-muted p-0">Se te enviara un correo para resetear tu contraseña</small>
                </div>
            </form>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>
