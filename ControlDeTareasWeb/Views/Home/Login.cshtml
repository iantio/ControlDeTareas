@model ControlDeTareasWeb.DAL.EMPLEADO

@{
    ViewBag.Title = "Login";
    
}


@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/EstiloControlTareas.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <fieldset>
                <legend>Inicio de Sesion</legend>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @if (@ViewBag.Message != null)
                {
                    <div style="border: 1px solid red">
                        @ViewBag.Message
                    </div>
                }
                <table class="table">
                    <tr>
                        <td>@Html.LabelFor(a => a.USUARIO)</td>
                        <td>@Html.TextBoxFor(a => a.USUARIO)</td>
                        <td>@Html.ValidationMessageFor(a => a.USUARIO)</td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(a => a.CLAVE)
                        </td>
                        <td>
                            @Html.PasswordFor(a => a.CLAVE)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(a => a.CLAVE)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Login" />
                        </td>
                        <td></td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <div class="col"></div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
}  